{
  "name": "cinephile-server",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/dl0312/Cinephile-server",
  "author": "dl0312 <leegun2003@gmail.com>",
  "license": "MIT",
  "scripts": {
    "predev": "yarn run types",
    "dev": "cd src && nodemon --exec ts-node index.ts -e ts,graphql",
    "pretypes": "gql-merge --out-file ./src/schema.graphql ./src/api/**/*.graphql",
    "types": "graphql-to-typescript ./src/schema.graphql ./src/types/graph.d.ts",
    "prebuild": "rm -rf dist",
    "build": "tsc",
    "postbuild": "cd src && copy ./api/**/*.graphql ../dist/api",
    "start": "cd dist && node ."
  },
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.4",
    "@types/express-graphql": "^0.6.2",
    "@types/helmet": "^0.0.42",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/morgan": "^1.7.35",
    "babel-runtime": "^6.26.0",
    "bcrypt": "^3.0.3",
    "class-validator": "^0.9.1",
    "cors": "^2.8.5",
    "express-graphql": "^0.7.1",
    "gql-merge": "^0.0.6",
    "graphql-to-typescript": "^0.1.2",
    "graphql-tools": "^4.0.3",
    "graphql-yoga": "^1.16.9",
    "helmet": "^3.15.0",
    "jsonwebtoken": "^8.4.0",
    "merge-graphql-schemas": "^1.5.8",
    "morgan": "^1.9.1",
    "nodemon": "^1.18.9",
    "pg": "^7.7.1",
    "ts-node": "^7.0.1",
    "typeorm": "^0.2.11",
    "typescript": "^3.2.2"
  }
}
